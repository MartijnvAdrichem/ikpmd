<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomeBackgroundColor"
    tools:context=".shop.BuyEggView">

    <ImageView
        android:id="@+id/image_egg"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pokemonegg" />

    <TextView
        android:id="@+id/textview_pokemon_name"
        android:layout_width="367dp"
        android:layout_height="54dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Oh?"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/image_egg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>