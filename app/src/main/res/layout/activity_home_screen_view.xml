<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomeBackgroundColor"
    tools:context=".HomeScreenView">

    <TextView
        android:id="@+id/hsText"
        android:layout_width="330dp"
        android:layout_height="37dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Welcome message"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/battleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/battleButton"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="false"
        android:backgroundTint="@color/ButtonBackgroundColor"
        android:cropToPadding="false"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/profileButton"
        app:layout_constraintEnd_toStartOf="@+id/shopButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hsText"
        app:srcCompat="@drawable/battle2" />

    <ImageButton
        android:id="@+id/shopButton"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/ButtonBackgroundColor"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/highscoreButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/battleButton"
        app:layout_constraintTop_toBottomOf="@+id/hsText"
        app:srcCompat="@drawable/store" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/ButtonBackgroundColor"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/logoutButton"
        app:layout_constraintEnd_toStartOf="@+id/highscoreButton"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/profile" />

    <ImageButton
        android:id="@+id/highscoreButton"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/ButtonBackgroundColor"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/logoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileButton"
        app:srcCompat="@drawable/highscores3" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="136dp"
        android:layout_marginStart="136dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:elevation="20dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Log Out"
        android:textColor="?attr/colorBackgroundFloating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="5dp"
        android:onClick="updateMusicPlaying"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

</android.support.constraint.ConstraintLayout>