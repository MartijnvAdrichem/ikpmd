<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomeBackgroundColor"
    tools:context=".shop.ShopView">

    <Button
        android:id="@+id/button_buySmallEgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="49dp"
        android:background="@color/ButtonBackgroundColor"
        android:fontFamily="@font/bubblegum_sans"
        android:onClick="buySmallEgg"
        android:text="Buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="1000 coins"
        app:layout_constraintStart_toEndOf="@+id/eggview3"
        app:layout_constraintTop_toBottomOf="@+id/Bi" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="400 coins"
        app:layout_constraintStart_toEndOf="@+id/eggview2"
        app:layout_constraintTop_toBottomOf="@+id/Medium_Egg" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="201dp"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="150 coins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eggview1"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Small Egg"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/eggview1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eggview4"
        android:layout_width="90dp"
        android:layout_height="119dp"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eggview3"
        app:srcCompat="@drawable/hugeegg" />

    <ImageView
        android:id="@+id/eggview3"
        android:layout_width="90dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eggview2"
        app:srcCompat="@drawable/largeegg" />

    <ImageView
        android:id="@+id/eggview2"
        android:layout_width="90dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eggview1"
        app:srcCompat="@drawable/mediumegg" />

    <ImageView
        android:id="@+id/eggview1"
        android:layout_width="90dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smallegg" />

    <TextView
        android:id="@+id/Medium_Egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="66dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Medium Egg"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/eggview2"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/Bi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="69dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Large Egg"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/eggview3"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginTop="74dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Huge Egg"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/eggview4"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="2500 coins"
        app:layout_constraintStart_toEndOf="@+id/eggview4"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/button_buyHugeEgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="72dp"
        android:background="@color/ButtonBackgroundColor"
        android:fontFamily="@font/bubblegum_sans"
        android:onClick="buyHugeEgg"
        android:text="Buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_buyLargeEgg" />

    <Button
        android:id="@+id/button_buyLargeEgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="71dp"
        android:background="@color/ButtonBackgroundColor"
        android:fontFamily="@font/bubblegum_sans"
        android:onClick="buyLargeEgg"
        android:text="Buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_buyMediumEgg" />

    <Button
        android:id="@+id/button_buyMediumEgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="71dp"
        android:background="@color/ButtonBackgroundColor"
        android:fontFamily="@font/bubblegum_sans"
        android:onClick="buyMediumEgg"
        android:text="Buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_buySmallEgg" />

    <TextView
        android:id="@+id/textView_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bubblegum_sans"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="26dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/textView_coins"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coin" />
</android.support.constraint.ConstraintLayout>